{% trans_default_domain 'FOSUserBundle' %}

<body class="gray-bg">
<div id="snacks" class="se-pre-con"></div>

<div class="middle-box text-center loginscreen   animated fadeInDown">

    <div>

        <br><br><br><br>
        <img src="{{ asset('TemplateSimpleUser/images/design-agency/logo8.png') }}" style="width: 100%; height: 100%;" alt=""/>

    </div>
    <h3>Changer Password.</h3>
    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
    <div class="form-group">
        {{ form_widget(form.current_password, { 'attr': {'class': 'form-control','placeholder':'current password'} }) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.plainPassword) }}
    </div>

    <div>
        <input  class="btn btn-primary block full-width m-b" type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>

    {{ form_end(form) }}
</div></body>